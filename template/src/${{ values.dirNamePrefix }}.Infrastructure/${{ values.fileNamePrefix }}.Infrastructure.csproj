<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		{%- if values.enableCosmosDb %}
		<PackageReference Include="Microsoft.Azure.Cosmos" Version="3.26.1" />
		{%- endif %}

		{%- if values.enableEntityFramework %}
		<PackageReference Include="Microsoft.EntityFrameworkCore" Version="6.0.3" />

		{%- if values.enableEntityFrameworkCosmosDb %}
		<PackageReference Include="Microsoft.EntityFrameworkCore.Cosmos" Version="6.0.3" />
		{%- endif %}

		{%- if values.enableEntityFrameworkSqlServer %}
		<PackageReference Include="Microsoft.EntityFrameworkCore.Relational" Version="6.0.3" />
		{%- endif %}

		{%- endif %}

		<PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="6.0.0" />
	</ItemGroup>

	<ItemGroup>
		<Using Include="Microsoft.Extensions.Options" />
		<Using Include="Microsoft.Extensions.DependencyInjection" />
		<Using Include="${{ values.namespacePrefix }}.Domain.Models" />
		<Using Include="${{ values.namespacePrefix }}.Domain.Repositories" />
		<Using Include="${{ values.namespacePrefix }}.Domain.Commands" />

		{%- if values.enableEntityFramework %}
		<Using Include="Microsoft.EntityFrameworkCore" />
		<Using Include="${{ values.namespacePrefix }}.Infrastructure.EntityFramework" />
		{%- endif %}

		{%- if values.enableCosmosDb %}
		<Using Include="Microsoft.Azure.Cosmos" />
		<Using Include="${{ values.namespacePrefix }}.Infrastructure.CosmosDb" />
		{%- endif %}

		{%- if values.enableInMemoryRepository %}
		<Using Include="${{ values.namespacePrefix }}.Infrastructure.InMemory" />
		{%- endif %}

	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\${{ values.dirNamePrefix }}.Domain\${{ values.fileNamePrefix }}.Domain.csproj" />
	</ItemGroup>

</Project>
